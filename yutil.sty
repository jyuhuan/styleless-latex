% Don't just just hate \begin{x} \end{x}? 
\newcommand{\WrapIn}[2]{\begin{#1} #2 \end{#1}}
\newcommand{\Document}[1]{\WrapIn{document}{#1}}
\newcommand{\Section}[2]{\section{ #1 } #2 }
\newcommand{\UnnumberedSection}[2]{\section*{#1} #2}
\newcommand{\Subsection}[2]{\subsection{ #1 } #2 }
\newcommand{\UnnumberedSubsection}[2]{\subsection*{#1} #2}
\newcommand{\Subsubsection}[2]{\subsubsection{#1} #2}
\newcommand{\UnnumberedSubsubsection}[2]{\subsubsection*{#1} #2}
\newcommand{\Paragraph}[2]{\paragraph{#1} #2}
\newcommand{\Abstract}[1]{\WrapIn{abstract}{#1}}
\newcommand{\BlockQuote}[1]{\WrapIn{quote}{#1}}
\newcommand{\Title}[2][]{\author{#1} \title{#2}\maketitle}
\newcommand{\Algorithm}[2]{\WrapIn{algorithm}{\caption{#1}#2}}
\newcommand{\Proof}[1]{\WrapIn{proof}{#1}}
\newcommand{\CenteredFigureWithCaption}[5]{
  \begin{figure}[#1]
    \centering
    \caption{#5}
    \label{#4}
    \includegraphics[width=#2\textwidth]{#3}
  \end{figure}
}
